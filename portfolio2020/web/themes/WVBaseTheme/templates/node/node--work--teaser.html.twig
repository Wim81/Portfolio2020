{% set id = node.title.value|lower|replace({' ': '_'}) %}
{% set idref = '#' ~ id %}

<div class="col-md-6 col-lg-4 mb-4">
    <a href="{{ url }}" class="work-teaser">
        <div class="work-teaser-inner h-100 text-center">
            <div class="work-teaser-image">
                <div class="work-teaser-image-inner">
                    {{ content.field_main_image.0 }}
                </div>
            </div>

            <div class="container work-teaser-title-container">
                <div class="row">
                    <div class="col-md-10 offset-md-1 work-teaser-title-wrapper">
                        <h3 class="work-teaser-title">{{ node.title.value|upper }}</h3>
                    </div>
                </div>
            </div>

            <div class="work-teaser-description">{{ content.field_teaser_text.0 }}</div>
            <h3 class="work-teaser-linktext">Check it out</h3>
        </div>
    </a>
</div>